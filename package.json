{
  "name": "zenn-content-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Zenn content boilerplate",
  "scripts": {
    "preview": "zenn preview",
    "article": "zenn new:article",
    "book": "zenn new:book",
    "update": "bun add -D zenn-cli@latest",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint:text": "textlint \"**/*.md\"",
    "lint:prettier": "prettier --ignore-path .prettierignore --check .",
    "lint:cspell": "cspell \"**\" .",
    "format:prettier": "prettier --ignore-path .prettierignore --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "cspell": "^8.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.12.1",
    "prettier": "^3.2.5",
    "textlint": "^14.0.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1",
    "textlint-rule-prh": "^6.0.0",
    "zenn-cli": "^0.1.153"
  },
  "license": "MIT"
}
